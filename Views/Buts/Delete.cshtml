@model SCOREgrp05.Models.But

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr vous voulez supprimer?</h3>
<div>
    <h4>But</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID du Match: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.match.matchId)
        </dd>
        <dt class = "col-sm-2">
            Score: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.score)
        </dd>
        <dt class = "col-sm-2">
            Temps: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.temps)
        </dd>
        <dt class = "col-sm-2">
            Joueur: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.joueur)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="butId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste des buts</a>
    </form>
</div>

@model SCOREgrp05.Models.Match

@{
    ViewData["Title"] = "Edit";
}

<h1>Éditer</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input id="id" type="hidden" asp-for="matchId" />
            <div class="form-group">
                <label asp-for="equipe1" class="control-label">Équipe 1</label>
                <input id="equipe1" asp-for="equipe1" class="form-control" />
                <span asp-validation-for="equipe1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="equipe2" class="control-label">Équipe 2</label>
                <input id="equipe2" asp-for="equipe2" class="form-control" />
                <span asp-validation-for="equipe2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="score" class="control-label">Score</label>
                <input  id="score" asp-for="score" class="form-control" />
                <span asp-validation-for="score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="temps" class="control-label">Temps</label>
                <input id="temps" asp-for="temps" class="form-control" />
                <span asp-validation-for="temps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="savebt" type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des parties</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
